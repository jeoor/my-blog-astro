---
import siteConfig from '~/site.config'
import SocialLinks from '~/components/SocialLinks.astro'
import BeianIcon from '~/icons/备案图标.png'
---

<footer
  class="mt-auto pt-9 md:pt-11 grow-0 flex flex-col gap-6 items-center justify-between max-w-full text-foreground/80">
  {siteConfig.socialLinks && <SocialLinks socialLinks={siteConfig.socialLinks} />}
  <div class="flex flex-col md:flex-row flex-wrap flex-1 items-center justify-center">
    <span class="my-1">
      {siteConfig.author} © 2026
    </span>
    <span class="mx-5 hidden md:block"> :: </span>
    <span class="my-1">
      由 <a
        class="underline"
        target="_blank"
        rel="noopener noreferrer"
        href="https://astro.build">Astro</a
      >
      和 <a
        class="underline"
        target="_blank"
        rel="noopener noreferrer"
        href="https://github.com/stelcodes/multiterm-astro">MultiTerm</a
      >
      强力驱动
    </span>
    <span class="mx-5 hidden md:block"> :: </span>
    <span class="my-1">
      <a
        class="underline"
        href="https://beian.miit.gov.cn/"
        rel="noreferrer noopener"
        target="_blank">
        冀ICP备2026002497号-1
      </a>
    </span>
    <span class="mx-5 hidden md:block"> :: </span>
    <span class="my-1">
      <a
        class="inline-flex items-center gap-2 underline"
        href="https://beian.mps.gov.cn/#/query/webSearch?code=13112502001042"
        rel="noreferrer noopener"
        target="_blank">
        <img
          src={BeianIcon.src}
          width="16"
          height="16"
          alt="公安备案"
          loading="lazy"
          class="inline-block"
        />
        冀公网安备13112502001042号
      </a>
    </span>
  </div>
</footer>
